{
  "include": ["lib", "extensions"],
  "exclude": ["**/node_modules", "**/test", "**/stories", "**/*.spec.ts", "**/samples"],
  "compilerOptions": {
      "module": "es2022",
      "target": "es2022",
      "lib": ["dom", "es2022"],
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./",
      "moduleResolution": "node",
      "baseUrl": "./",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "paths": {
          "@azure/*": [
              "./lib/*/src"
          ]
      }
  }
}